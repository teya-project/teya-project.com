<h1><%= @website.domain_name %></h1>
<span class="badge bg-danger"><%= "BANNED" if @website.rkn_status %></span>

<ul>
  <li><%= link_to "Edit", edit_website_path(@website) %></li>
  <li><%= link_to "Destroy", website_path(@website),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>