<div class="container-fluid">
  <!-- start page title -->
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-flex align-items-center justify-content-between">
        <h4 class="mb-0 font-size-18">Edit website: <%= Idna.to_unicode(@website.domain_name) %></h4>

        <div class="page-title-right">
          <ol class="breadcrumb m-0">
            <li class="breadcrumb-item active">Websites</li>
            <li class="breadcrumb-item">Edit</li>
          </ol>

        </div>
        <a href="/websites/<%= @website.id %>/destroy/">destroy</a>

      </div>
    </div>
  </div>
  <!-- end page title -->
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <%= render "form", website: @website %>
        </div>
      </div>
    </div>


  </div>
  <!-- end row -->
</div>







